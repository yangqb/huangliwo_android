<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/transparent"
    android:orientation="vertical"
    >
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:background="@mipmap/tanchuang"
      android:orientation="vertical"
      >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.45"
        android:gravity="bottom"
        android:orientation="horizontal"
        android:paddingBottom="5dp"
        >
      <ImageView
          android:id="@+id/iv_weiwomaidan"
          android:layout_width="0dp"
          android:layout_height="72dp"
          android:layout_weight="1"
          android:src="@mipmap/icon_fu_weiwomaidan"
          />
      <ImageView
          android:id="@+id/iv_saoyisao"
          android:layout_width="0dp"
          android:layout_height="72dp"
          android:layout_marginBottom="18dp"
          android:layout_weight="1"
          android:src="@mipmap/icon_fu_saoyisao"
          />
      <ImageView
          android:id="@+id/iv_woyaoshoukuan"
          android:layout_width="0dp"
          android:layout_height="72dp"
          android:layout_weight="1"
          android:src="@mipmap/icon_fu_woyaoshoukuan"
          />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="top"
        android:orientation="horizontal"
        android:paddingLeft="70dp"
        android:paddingRight="70dp"
        android:paddingTop="20dp"
        >
      <ImageView
          android:id="@+id/iv_shangjialudan"
          android:layout_width="0dp"
          android:layout_height="72dp"
          android:layout_weight="1"
          android:src="@mipmap/icon_fu_shangjialudan"
          />
      <ImageView
          android:id="@+id/iv_fabufuwu"
          android:layout_width="0dp"
          android:layout_height="72dp"
          android:layout_marginBottom="18dp"
          android:layout_weight="1"
          android:src="@mipmap/icon_fabufuwu"
          />
    </LinearLayout>
  </LinearLayout>
  <View
      android:layout_width="match_parent"
      android:layout_height="1dp"
      android:background="@color/sf_divider"
      />
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="50dp"
      android:background="@color/white"
      android:gravity="center"
      android:orientation="vertical"
      >
    <ImageView
        android:id="@+id/cancel"
        android:layout_width="40dp"

        android:layout_height="40dp"
        android:src="@mipmap/icon_guanbi"
        />
  </LinearLayout>
</LinearLayout>