<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_yellow"
    android:orientation="vertical">

    <include layout="@layout/layer_classification_head_nav" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bg_yellow"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dp_10">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/button2"
                android:layout_width="58dp"
                android:layout_height="22dp"
                android:background="@drawable/button_selecter_commodity"
                android:gravity="center"
                android:text="商城"
                android:textColor="@color/color_333333"
                android:textSize="14sp"
                android:textStyle="bold" />

            <View
                android:id="@+id/line1"
                android:layout_width="23dp"
                android:layout_height="@dimen/dp_4"
                android:background="@color/bank_bg01"></View>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/button1"
                android:layout_width="58dp"
                android:layout_height="22dp"
                android:background="@drawable/button_selecter_commodity"
                android:gravity="center"
                android:text="商家"
                android:textColor="@color/color_333333"
                android:textSize="14sp"
                android:textStyle="bold" />

            <View
                android:id="@+id/line"
                android:layout_width="23dp"
                android:layout_height="@dimen/dp_4"
                android:background="@color/bank_bg01"></View>
        </LinearLayout>


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:paddingTop="15dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/white"
            android:orientation="vertical"
            android:padding="@dimen/dp_10">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/left_recyclerView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:nestedScrollingEnabled="false">

            </android.support.v7.widget.RecyclerView>
        </LinearLayout>

        <com.scwang.smartrefresh.layout.SmartRefreshLayout
            android:id="@+id/swipeLayout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3.5"
            android:background="@color/color_f7f7f7">

            <android.support.v4.widget.NestedScrollView
                android:id="@+id/nescro"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fillViewport="true">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:id="@+id/backgroundImg"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/img_empty"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/fail" />

                        <TextView
                            android:id="@+id/no_data"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_20"
                            android:text="暂无数据"
                            android:textColor="@color/txt_middle" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <LinearLayout
                            android:id="@+id/hot"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="11dp"
                            android:layout_marginTop="8dp"
                            android:layout_marginEnd="8dp"
                            android:background="@drawable/shop_baground_shape_gray"
                            android:orientation="vertical"
                            android:padding="@dimen/dp_10"
                            android:visibility="gone">

                            <TextView
                                android:id="@+id/title1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="14.5dp"
                                android:text="热门商铺"
                                android:textColor="@color/bank_bg01"
                                android:textSize="13sp"></TextView>

                            <android.support.v7.widget.RecyclerView
                                android:id="@+id/right_recyclerView"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/dp_10"
                                android:nestedScrollingEnabled="false">

                            </android.support.v7.widget.RecyclerView>
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/boutique"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="11dp"
                            android:layout_marginTop="8dp"
                            android:layout_marginEnd="8dp"
                            android:background="@drawable/shop_baground_shape_gray"
                            android:orientation="vertical"
                            android:padding="@dimen/dp_10"
                            android:visibility="gone">

                            <TextView
                                android:id="@+id/title2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="14.5dp"
                                android:text="优质商家"
                                android:textColor="@color/bank_bg01"
                                android:textSize="13sp"></TextView>

                            <android.support.v7.widget.RecyclerView
                                android:id="@+id/recyclerView1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:background="@color/white"
                                android:nestedScrollingEnabled="false">

                            </android.support.v7.widget.RecyclerView>
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/recommend"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="11dp"
                            android:layout_marginTop="8dp"
                            android:layout_marginEnd="8dp"
                            android:layout_marginBottom="5dp"
                            android:background="@drawable/shop_baground_shape_gray"
                            android:orientation="vertical"
                            android:padding="@dimen/dp_10"
                            android:visibility="gone">

                            <TextView
                                android:id="@+id/title3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="14.5dp"
                                android:text="为您推荐"
                                android:textColor="@color/bank_bg01"
                                android:textSize="13sp"></TextView>

                            <android.support.v7.widget.RecyclerView
                                android:id="@+id/recyclerView2"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginTop="@dimen/dp_10"
                                android:nestedScrollingEnabled="false">

                            </android.support.v7.widget.RecyclerView>
                        </LinearLayout>


                    </LinearLayout>

                </RelativeLayout>

            </android.support.v4.widget.NestedScrollView>

        </com.scwang.smartrefresh.layout.SmartRefreshLayout>
    </LinearLayout>
</LinearLayout>