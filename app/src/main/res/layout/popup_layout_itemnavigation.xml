<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_height="wrap_content">
    <View
        android:id="@+id/viewfour"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/viewthree"
        android:layout_width="match_parent"
        android:layout_height="0.8dp"
        android:background="#cecece"
        ></View>
    <TextView
        android:id="@+id/gaode_map"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:layout_above="@id/baidu_map"
        android:gravity="center"
        android:textSize="@dimen/sp_15"
        android:textColor="@color/grgray"
        android:text="高德地图"/>
    <View
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/viewthree"
        android:layout_width="match_parent"
        android:layout_height="0.8dp"
        android:background="#cecece"
        ></View>

    <TextView
        android:id="@+id/baidu_map"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:layout_above="@id/tencent_map"
        android:textColor="@color/grgray"
        android:textSize="@dimen/sp_15"
        android:text="百度地图"/>
    <View
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/viewthree"
        android:layout_width="match_parent"
        android:layout_height="0.8dp"
        android:background="#cecece"
        ></View>

    <TextView
        android:id="@+id/tencent_map"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="@dimen/dp_45"
        android:layout_alignParentBottom="true"
        android:textColor="@color/grgray"
        android:textSize="@dimen/sp_15"
        android:text="取消"/>
</LinearLayout>