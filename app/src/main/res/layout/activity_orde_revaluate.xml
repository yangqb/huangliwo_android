<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
  <LinearLayout
      android:paddingLeft="10dp"
      android:paddingRight="10dp"
      android:layout_width="match_parent"
      android:layout_height="100dp"
      android:background="@color/white"
      android:gravity="center_vertical"
      android:orientation="horizontal"
      >
    <ImageView
        android:id="@+id/item_icon"
        android:layout_width="120dp"
        android:layout_height="82dp"
        android:scaleType="fitXY"
        android:src="@drawable/pic_shanghutu"
        />
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_weight="2"
        android:orientation="vertical"
        >
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="99dp"
          android:gravity="center_vertical"
          android:orientation="vertical"
          android:paddingBottom="10dp"
          android:paddingTop="15dp"
          >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            >

          <TextView
              android:id="@+id/item_name"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_toLeftOf="@+id/item_juli"
              android:ellipsize="end"
              android:paddingRight="10dp"
              android:singleLine="true"
              android:text="新视觉电影院"
              android:textColor="@color/sf_black"
              android:textSize="@dimen/sf_font_medum"
              />
          <TextView
              android:id="@+id/item_juli"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_alignParentRight="true"
              android:ellipsize="end"
              android:singleLine="true"
              android:text="200.1KM"
              android:textColor="@color/sf_blue"
              android:textSize="@dimen/sf_font_small"
              android:visibility="gone"
              />
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:paddingLeft="10dp"
            android:paddingRight="20dp"
            >

          <TextView
              android:id="@+id/item_address"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:drawableLeft="@mipmap/icon_weizhi"
              android:drawablePadding="5dp"
              android:ellipsize="end"
              android:singleLine="true"
              android:text="湖北省武汉市吴山区"
              android:textColor="@color/sf_black_light"
              android:textSize="@dimen/sf_font_medum"
              />

          <TextView
              android:id="@+id/item_msg"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:ellipsize="end"
              android:paddingLeft="15dp"
              android:singleLine="true"
              android:text="今天打特价 全部9.9折啦啦啦啦啦"
              android:textColor="@color/sf_black_lighter"
              android:textSize="@dimen/sf_font_small"
              />
        </LinearLayout>

      </LinearLayout>

    </LinearLayout>

  </LinearLayout>
  <View
      android:layout_width="match_parent"
      android:layout_height="1dp"

      android:background="@color/sf_divider"
      android:paddingRight="5dp"
      />
    <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
        android:background="@color/white"
            android:gravity="center_vertical|right"
            android:layout_height="50dp">
 <TextView
     android:layout_width="wrap_content"
     android:textSize="@dimen/sf_font_small"
     android:textColor="@color/sf_black"
     android:text="消费："
     android:layout_height="wrap_content"/>
      <TextView
          android:id="@+id/shop_money"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginLeft="10dp"
          android:text="￥2563.0"
          android:layout_marginRight="10dp"
          android:textColor="@color/sf_red"
          android:textSize="@dimen/sf_font_big"
          />
       <TextView
           android:layout_width="wrap_content"
           android:layout_marginLeft="10dp"
           android:textColor="@color/sf_black"
           android:textSize="@dimen/sf_font_small"
           android:text="返利PV："
           android:visibility="gone"
           android:layout_height="wrap_content"/>
       <TextView
           android:layout_width="wrap_content"
           android:textSize="@dimen/sf_font_big"
           android:text="50.0"
           android:layout_marginLeft="10dp"
           android:visibility="gone"
           android:textColor="@color/sf_yellow"
           android:layout_marginRight="10dp"
           android:layout_height="wrap_content"/>
    </LinearLayout>
  <View
      android:layout_width="match_parent"
      android:layout_height="10dp"
      android:background="#F5F5F5"
      />
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="45dp"
      android:gravity="center_vertical"
      android:background="@color/white"
      android:orientation="vertical"
      >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:visibility="gone"
        >
      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="商家服务"
          android:textColor="@color/sf_black"
          android:textSize="@dimen/sf_font_medum"
          />
      <me.zhanghai.android.materialratingbar.MaterialRatingBar
          android:id="@+id/item_service_ratting"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginLeft="10dp"
          android:maxHeight="25dp"
          android:minHeight="25dp"
          android:rating="5"
          app:mrb_progressTint="@color/sf_yellow"
          app:mrb_secondaryProgressTint="@color/sf_yellow"
          style="@style/Widget.MaterialRatingBar.RatingBar"
          />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        >
      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="评分"
          android:textColor="@color/sf_black"
          android:textSize="@dimen/sf_font_medum"
          />
      <me.zhanghai.android.materialratingbar.MaterialRatingBar
          android:id="@+id/item_ratting"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginLeft="10dp"
          android:maxHeight="25dp"
          android:minHeight="25dp"
          android:rating="5"
          app:mrb_progressTint="@color/sf_yellow"
          app:mrb_secondaryProgressTint="@color/sf_yellow"
          style="@style/Widget.MaterialRatingBar.RatingBar"
          />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/sf_divider"
        />
  </LinearLayout>
  <EditText
      android:layout_width="match_parent"
      android:layout_height="150dp"
      android:id="@+id/edit_px"
      android:gravity="top"
      android:padding="10dp"
      android:textSize="@dimen/sf_font_medum"
      android:background="@color/white"
      android:hint="分享你的购买心得"
      />
  <Button
      android:id="@+id/rl_bottomContainer"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_centerHorizontal="true"
      android:layout_centerVertical="true"
      android:layout_marginBottom="@dimen/dp_10"
      android:layout_marginLeft="@dimen/dp_20"
      android:layout_marginRight="@dimen/dp_20"
      android:layout_marginTop="30dp"
      android:background="@drawable/button_shape_blue"
      android:text="确定"
      android:textColor="@color/white"
      android:textSize="@dimen/dp_16"
      style="?android:attr/borderlessButtonStyle"
      />

</LinearLayout>
