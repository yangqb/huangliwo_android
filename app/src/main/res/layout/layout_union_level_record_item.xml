<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp">
    <TextView
        android:id="@+id/tv_TypeName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="申购一级VAP,增加100PV"
        android:textColor="@color/txt_big"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_10"
        android:textSize="13dp"
        />
    <TextView
        android:id="@+id/tv_pass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="已经通过"
        android:textColor="@color/txt_pass"
        android:textSize="13dp"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_alignParentRight="true"
        />
    <TextView
        android:id="@+id/tv_date"
        android:layout_below="@+id/tv_TypeName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2017-06-24"
        android:textColor="@color/edit_hint"
        android:textSize="11dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_alignParentRight="true"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/edit_hint"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        />
</RelativeLayout>
