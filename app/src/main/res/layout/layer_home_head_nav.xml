<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
       android:layout_width="fill_parent"
             android:layout_height="?attr/actionBarSize">

    <LinearLayout
        android:id="@+id/home_head_ll"
        android:layout_width="fill_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/sf_blue"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_home_nv_left"
            android:layout_width="@dimen/home_top_image_dimen"
            android:layout_height="@dimen/home_top_image_dimen"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:background="@drawable/bg_icon_back_selector"
            android:scaleType="centerInside"
            android:src="@mipmap/icon_xiaoxi"/>

        <LinearLayout
            android:id="@+id/search"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:gravity="center"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/classify_search_bg"
                android:padding="5dp"
                >

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:visibility="gone"
                    android:layout_marginRight="5dp"
                    android:background="?android:attr/selectableItemBackground"
                    android:src="@mipmap/icon_sousuo"/>

                <TextView
                    android:id="@+id/classify_top_search_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_toEndOf="@id/imageView"
                    android:drawablePadding="5dp"
                    android:layout_toRightOf="@id/imageView"
                    android:drawableLeft="@mipmap/icon_sousuo_gray"
                    android:background="?android:attr/selectableItemBackground"
                    android:text="搜索商户ID/昵称"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#a9afb4"
                    android:textSize="14sp"/>


            </RelativeLayout>
        </LinearLayout>

        <ImageView
            android:id="@+id/iv_home_nv_right"
            android:layout_width="@dimen/home_top_image_dimen"
            android:layout_height="@dimen/home_top_image_dimen"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:background="@drawable/bg_icon_back_selector"
            android:scaleType="centerInside"
            android:src="@mipmap/icon_saoyisao"/>
    </LinearLayout>
</FrameLayout>