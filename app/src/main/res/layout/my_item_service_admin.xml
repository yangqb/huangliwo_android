<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/item_icon"
            android:layout_width="0dp"
            android:layout_height="110dp"
            android:scaleType="centerCrop"
            android:layout_weight="1"
            android:src="@drawable/pic_shanghutu"
            />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="2"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:paddingLeft="10dp"
                android:paddingRight="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingRight="10dp">

                    <TextView
                        android:id="@+id/item_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="新视觉电影院"
                        android:textColor="@color/sf_black"
                        android:textSize="16sp"
                        />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1" />

                    <TextView
                        android:id="@+id/item_rebate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="返2.00pv"
                        android:textColor="@color/sf_yellow"
                        android:textSize="12sp"
                        />
                </LinearLayout>

                <TextView
                    android:id="@+id/item_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="￥2450.00"
                    android:textSize="18sp"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="10dp"
                android:paddingRight="20dp">

                <com.feitianzhu.fu700.view.CircleImageView
                    android:id="@+id/item_person_icon"
                    android:layout_width="33dp"
                    android:layout_height="33dp"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:paddingLeft="15dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/item_person"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="张志磊"
                        android:textColor="@color/sf_black"
                        android:textSize="14sp"
                        />

                    <TextView
                        android:id="@+id/item_phone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="13094039345"
                        android:textSize="12sp"
                        />
                </LinearLayout>
            </LinearLayout>


        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/sf_divider" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right|center_vertical"
        android:orientation="horizontal"
        android:layout_margin="10dp">

        <TextView
            android:id="@+id/btn_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:drawableLeft="@mipmap/icon_bianji"
            android:drawablePadding="10dp"
            android:text="编辑"
            android:textColor="@color/sf_black"
            android:textSize="16sp"
            />

        <TextView
            android:id="@+id/btn_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginLeft="20dp"
            android:drawableLeft="@mipmap/icon_shangchu"
            android:drawablePadding="10dp"
            android:text="删除"
            android:textColor="@color/sf_black"
            android:textSize="16sp"
            />
    </LinearLayout>
      <View
              android:layout_width="match_parent"
              android:background="@color/sf_divider"
              android:layout_height="10dp"/>



</LinearLayout>