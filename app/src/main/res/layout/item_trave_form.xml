<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingStart="@dimen/dp_10"
    android:paddingTop="@dimen/dp_10"
    android:paddingEnd="@dimen/dp_10">

    <com.feitianzhu.huangliwo.view.CornerLinearView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingStart="@dimen/dp_10"
        android:paddingEnd="@dimen/dp_10"
        app:cornerRadius="@dimen/dp_5">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_22"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ellipsize="end"
                android:lines="1"
                android:maxLines="1"
                android:text="北京市丰台区公交马场加油站"
                android:textColor="#ff333333"
                android:textSize="@dimen/sp_16"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/payState"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="支付成功"
                android:textColor="#ff333333"
                android:textSize="@dimen/sp_13" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_13_5"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/level1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_4_5"
                android:background="@drawable/shape_trave_form"
                android:paddingStart="@dimen/dp_12"
                android:paddingTop="@dimen/dp_3_5"
                android:paddingEnd="@dimen/dp_12"
                android:paddingBottom="@dimen/dp_3_5"
                android:text="汽油"
                android:textColor="#F88D03"
                android:textSize="@dimen/sp_13" />

            <TextView
                android:id="@+id/level2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_4_5"
                android:background="@drawable/shape_trave_form"
                android:paddingStart="@dimen/dp_12"
                android:paddingTop="@dimen/dp_3_5"
                android:paddingEnd="@dimen/dp_12"
                android:paddingBottom="@dimen/dp_3_5"
                android:text="汽油"
                android:textColor="#F88D03"
                android:textSize="@dimen/sp_13" />

            <TextView
                android:id="@+id/payNum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="end"
                android:text="￥ 300"
                android:textColor="#F88D03"
                android:textSize="@dimen/sp_15" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_13_5"
            android:layout_marginBottom="@dimen/dp_22"
            android:orientation="vertical">

            <TextView
                android:id="@+id/formId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="订单号：123456789101010"
                android:textColor="#ff999999"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/time"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="2020.05.18"
                android:textColor="#ff999999"
                android:textSize="13sp" />
        </LinearLayout>
    </com.feitianzhu.huangliwo.view.CornerLinearView>
</LinearLayout>
