<?xml version="1.0" encoding="utf-8"?>


<com.feitianzhu.huangliwo.view.CornerLinearView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_126"
    android:layout_marginStart="@dimen/dp_10"
    android:layout_marginTop="@dimen/dp_10"
    android:layout_marginEnd="@dimen/dp_10"
    android:background="@color/white"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingStart="@dimen/dp_11"
    android:paddingEnd="@dimen/dp_11"
    app:cornerRadius="@dimen/dp_5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_19"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:ellipsize="end"
            android:maxLines="1"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/oilname"
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="北京市丰台区公交马场加油站"
                    android:textColor="#ff333333"
                    android:textSize="17sp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/oilnavigation"
                    android:layout_width="@dimen/dp_62"
                    android:layout_height="@dimen/dp_22"
                    android:src="@mipmap/p01_02daohang">

                </ImageView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/oiladdress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="北京市丰台区富丰园340总站内"
                    android:textColor="#ff999999"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/distancetext"
                    android:paddingEnd="@dimen/dp_8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#ff999999"
                    android:textSize="12sp" />

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/oilprice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="￥4.79"
            android:textColor="#fff88d03"
            android:textSize="@dimen/sp_15"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_12"
            android:background="#fff88d03"
            android:padding="@dimen/dp_3_5"
            android:text="已降 "
            android:textColor="#ffffffff"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/oildiscountprice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_trave_button"
            android:padding="@dimen/dp_3_5"
            android:text="￥0.77"
            android:textColor="#fff88d03"
            android:textSize="12sp" />

    </LinearLayout>

</com.feitianzhu.huangliwo.view.CornerLinearView>

