<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"

    >

  <LinearLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:background="@color/white"
      android:gravity="center"
      android:layout_margin="5dp"
      android:paddingBottom="20dp"
      android:orientation="vertical"
      >

    <ImageView
        android:id="@+id/item_icon"
        android:layout_width="match_parent"
        android:layout_height="143.5dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/pic_fuwutujiazaishibai"
        />
    <TextView
        android:id="@+id/item_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:lines="1"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="华为运动手表"
        android:textColor="@color/sf_black"
        android:textSize="16sp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:gravity="center_vertical"
        android:lines="1"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        >
      <TextView
          android:id="@+id/item_price"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="$2450.00"
          android:textColor="@color/sf_red"
          android:textSize="18sp"
          />
      <View
          android:layout_width="0dp"
          android:layout_height="0dp"
          android:layout_weight="1"
          />
      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:background="@drawable/red_oval"
          android:text="返"
          android:gravity="center"
          android:layout_marginRight="5dp"
          android:textColor="@color/white"
          android:textSize="14sp"
          />
      <TextView
          android:id="@+id/item_rebate"
          android:layout_width="wrap_content"
          android:layout_height="18dp"
          android:gravity="center"
          android:text="2.00pv"
          android:textColor="@color/sf_yellow"
          android:textSize="14sp"
          />
    </LinearLayout>
  </LinearLayout>
  <FrameLayout
      android:layout_width="wrap_content"
      android:paddingTop="5dp"
      android:layout_height="wrap_content"
      >
    <ImageView
        android:layout_width="73dp"
        android:layout_height="27.5dp"
        android:id="@+id/item_state"
        android:src="@mipmap/icon_shenheshibai"
        />
  </FrameLayout>
</RelativeLayout>