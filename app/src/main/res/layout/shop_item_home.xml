<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content" xmlns:tools="http://schemas.android.com/tools"
              android:background="@color/white"
              android:layout_marginTop="10dp"
              android:layout_marginLeft="12dp"
              android:layout_marginRight="12dp"
              android:orientation="vertical"
>
    <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_height="wrap_content">
      <ImageView
          android:id="@+id/item_icon"
          android:layout_width="120dp"
          android:layout_height="82dp"
          android:scaleType="fitXY"
          android:src="@drawable/pic_shanghutu" />
      <LinearLayout
          android:layout_width="0dp"
          android:layout_height="100dp"
          android:orientation="vertical"
          android:layout_weight="2">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="99dp"
            android:paddingTop="15dp"
            android:paddingBottom="10dp"
            android:gravity="center_vertical"
            android:orientation="vertical"
            >
          <RelativeLayout
              android:layout_width="match_parent"
              android:layout_height="0dp"
              android:layout_weight="1"
              android:paddingLeft="10dp"
              android:paddingRight="10dp"
              android:gravity="center_vertical"
              android:orientation="horizontal"
              >

            <TextView
                android:id="@+id/item_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/item_juli"
                android:ellipsize="end"
                android:paddingRight="10dp"
                android:singleLine="true"
                android:text="新视觉电影院"
                android:textColor="@color/sf_black"
                android:textSize="@dimen/sf_font_medum" />
            <TextView
                android:layout_width="wrap_content"
                android:textSize="@dimen/sf_font_small"
                android:id="@+id/item_juli"
                android:layout_alignParentRight="true"
                tools:text="200.1KM"
                android:singleLine="true"
                android:ellipsize="end"
                android:textColor="@color/sf_blue"
                android:layout_height="wrap_content"/>
          </RelativeLayout>
          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="0dp"
              android:layout_weight="2"
              android:gravity="center_vertical"
              android:paddingLeft="10dp"
              android:paddingRight="20dp"
              android:orientation="vertical"
              >

            <TextView
                android:id="@+id/item_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@mipmap/icon_weizhi"
                android:drawablePadding="5dp"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="湖北省武汉市吴山区"
                android:textColor="@color/sf_black_light"
                android:textSize="@dimen/sf_font_medum" />

            <TextView
                android:id="@+id/item_msg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:paddingLeft="15dp"
                android:singleLine="true"
                android:text="今天打特价 全部9.9折啦啦啦啦啦"
                android:textColor="@color/sf_black_lighter"
                android:textSize="@dimen/sf_font_small" />
          </LinearLayout>

        </LinearLayout>

      </LinearLayout>

    </LinearLayout>

  <View
      android:layout_width="match_parent"
      android:layout_marginLeft="128dp"
      android:paddingRight="5dp"
      android:layout_marginTop="10dp"
      android:background="@color/sf_divider"
      android:layout_height="1dp"/>


</LinearLayout>
