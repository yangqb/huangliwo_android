<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="7.8"
        android:orientation="vertical"
        android:background="@color/default_bg"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/white"
            android:layout_marginTop="@dimen/dp_10"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="服务名称"
                android:textSize="@dimen/text_size_body"
                android:textColor="@color/txt_big"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="@dimen/dp_10"
                />

            <EditText
                android:id="@+id/et_TradeName"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:hint="请输入商品名称"
                android:textColorHint="@color/txt_hint"
                android:textSize="@dimen/text_size_body"
                android:background="@null"
                android:textColor="@color/txt_big"
                android:gravity="right|center_vertical"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_10"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/default_bg"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                />

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/white"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="服务价格"
                android:textSize="@dimen/text_size_body"
                android:textColor="@color/txt_big"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="@dimen/dp_10"
                />

            <EditText
                android:id="@+id/et_TradePrice"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:hint="请输入商品价格"
                android:textColorHint="@color/txt_hint"
                android:textSize="@dimen/text_size_body"
                android:background="@null"
                android:textColor="@color/txt_red"
                android:layout_alignParentRight="true"
                android:gravity="right|center_vertical"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_10"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/default_bg"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/white"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="让利PV"
                android:textSize="@dimen/text_size_body"
                android:textColor="@color/txt_big"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="@dimen/dp_10"
                />

            <EditText
                android:id="@+id/et_TradeBenefit"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:hint="请输入让利PV"
                android:textColorHint="@color/txt_hint"
                android:textSize="@dimen/text_size_body"
                android:background="@null"
                android:textColor="@color/txt_yellow"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:gravity="right|center_vertical"
                android:layout_marginRight="@dimen/dp_10"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/default_bg"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                />

        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3.1"
            android:background="@color/white"
            android:orientation="vertical"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="3"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_10"
                android:text="服务图片"
                android:textColor="@color/txt_big"
                android:textSize="@dimen/text_size_body" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="7"
                android:orientation="horizontal"
                android:layout_marginBottom="@dimen/dp_10"
                >
                <LinearLayout
                    android:id="@+id/ll_addCover"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="@dimen/dp_10"
                    >
                    <ImageView
                        android:id="@+id/iv_add_cover"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/icon_tianjia"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="添加封面"
                        android:layout_marginTop="@dimen/dp_4"
                        android:textColor="@color/txt_hint"
                        android:gravity="center_horizontal"
                        />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/ll_addPic1"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="@dimen/dp_10"
                    >
                    <ImageView
                        android:id="@+id/iv_addPic1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/icon_tianjia"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="添加图片"
                        android:layout_marginTop="@dimen/dp_4"
                        android:textColor="@color/txt_hint"
                        android:gravity="center_horizontal"
                        />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/ll_addPic2"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:visibility="invisible"
                    android:clickable="false"
                    android:focusable="false"
                    >
                    <ImageView
                        android:id="@+id/iv_addPic2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/icon_tianjia"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="添加图片"
                        android:layout_marginTop="@dimen/dp_4"
                        android:textColor="@color/txt_hint"
                        android:gravity="center_horizontal"
                        />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/ll_addPic3"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:visibility="invisible"
                    android:clickable="false"
                    android:focusable="false"
                    >
                    <ImageView
                        android:id="@+id/iv_addPic3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/icon_tianjia"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="添加图片"
                        android:layout_marginTop="@dimen/dp_4"
                        android:textColor="@color/txt_hint"
                        android:gravity="center_horizontal"
                        />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/ll_addPic4"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:visibility="invisible"
                    android:clickable="false"
                    android:focusable="false"
                    >
                    <ImageView
                        android:id="@+id/iv_addPic4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/icon_tianjia"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="添加图片"
                        android:layout_marginTop="@dimen/dp_4"
                        android:textColor="@color/txt_hint"
                        android:gravity="center_horizontal"
                        />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/ll_addPic5"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginRight="@dimen/dp_10"
                    android:visibility="invisible"
                    android:clickable="false"
                    android:focusable="false"
                    >
                    <ImageView
                        android:id="@+id/iv_addPic5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/icon_tianjia"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="添加图片"
                        android:layout_marginTop="@dimen/dp_4"
                        android:textColor="@color/txt_hint"
                        android:gravity="center_horizontal"
                        />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/white"
            android:layout_marginTop="@dimen/dp_10"
            >
            <TextView
                android:id="@+id/tv_Contact"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="联系人"
                android:textSize="@dimen/text_size_body"
                android:textColor="@color/txt_big"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_alignBottom="@+id/editText"
                />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:hint="请输入联系人"
                android:textColorHint="@color/txt_hint"
                android:textSize="@dimen/text_size_body"
                android:background="@null"
                android:textColor="@color/txt_big"
                android:layout_alignParentRight="true"
                android:gravity="right|center_vertical"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_10"
                android:id="@+id/et_contact" />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/default_bg"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                android:id="@+id/view" />

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/white"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="联系电话"
                android:textSize="@dimen/text_size_body"
                android:textColor="@color/txt_big"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="@dimen/dp_10"
                />

            <EditText
                android:id="@+id/et_contactNum"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:hint="请输入联系电话"
                android:textColorHint="@color/txt_hint"
                android:textSize="@dimen/text_size_body"
                android:background="@null"
                android:textColor="@color/txt_big"
                android:layout_alignParentRight="true"
                android:gravity="right|center_vertical"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_10"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/default_bg"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/white"
            >
            <TextView
                android:id="@+id/tv_vip_ID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="联系地址"
                android:textSize="@dimen/text_size_body"
                android:textColor="@color/txt_big"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="@dimen/dp_10"
                />

            <EditText
                android:id="@+id/et_contactAddress"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:hint="请输入联系地址"
                android:textColorHint="@color/txt_hint"
                android:textSize="@dimen/text_size_body"
                android:background="@null"
                android:textColor="@color/txt_big"
                android:layout_alignParentRight="true"
                android:gravity="right|center_vertical"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_10"
                />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2.66"
            android:background="@color/white"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/dp_10"
            >

            <TextView
                android:id="@+id/tv_upload_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_16"
                android:text="服务描述"
                android:textColor="@color/txt_big"
                android:textSize="@dimen/text_size_body" />

            <EditText
                android:id="@+id/et_TradeDesc"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="请输入服务描述"
                android:textColorHint="@color/txt_hint"
                android:textSize="@dimen/text_size_body"
                android:background="@null"
                android:textColor="@color/txt_big"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginBottom="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_marginLeft="@dimen/dp_10"
                />


        </LinearLayout>

    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/default_bg"
        android:id="@+id/rl_bottomContainer"
        >
        <Button
            android:id="@+id/bt_send"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            style="?android:attr/borderlessButtonStyle"
            android:background="@drawable/button_shape_blue"
            android:text="确认发布"
            android:textColor="@color/white"
            android:textSize="@dimen/dp_16"
            />
    </RelativeLayout>
</LinearLayout>