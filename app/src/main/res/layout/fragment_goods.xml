<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="110dp"
    android:orientation="horizontal"
    android:background="@color/white"
    >
    <ImageView
        android:id="@+id/iv_bigIcon"
        android:layout_width="115dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_10"
        android:scaleType="fitXY"
        android:src="@mipmap/banner_jiazaishibai"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/dp_10"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/txt_big"
            android:textSize="14dp"
                android:textStyle="bold"
            android:layout_marginTop="@dimen/dp_10"
            />
            <TextView
                android:id="@+id/tv_youhui"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/txt_yellow"
                android:textSize="14dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_10"
                />

        </RelativeLayout>
        <TextView
            android:id="@+id/tv_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/txt_red"
            android:textSize="14dp"
            android:layout_marginTop="8dp"
            />
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="horizontal"
           >
           <com.feitianzhu.fu700.view.CircleImageView
               android:id="@+id/civ_pic"
               android:layout_width="30dp"
               android:layout_height="30dp"
               android:layout_marginTop="@dimen/dp_10"
               android:layout_marginBottom="@dimen/dp_10"
               android:src="@mipmap/banner_jiazaishibai"
               />
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="vertical"
               android:layout_marginLeft="@dimen/dp_4"
               android:layout_marginBottom="@dimen/dp_10"
               >
               <TextView
                   android:id="@+id/tv_personName"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:textColor="@color/txt_big"
                   android:layout_marginTop="@dimen/dp_10"
                   />
               <TextView
                   android:id="@+id/tv_personNum"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:textColor="@color/txt_hint"
                   android:textSize="@dimen/sp_12"
                   />

           </LinearLayout>

       </LinearLayout>
    </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/default_bg"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_alignParentBottom="true"
            />
    </RelativeLayout>
</LinearLayout>
