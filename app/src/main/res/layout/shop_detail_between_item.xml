<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_f7f7f7"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="102dp"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_10"
        android:background="@drawable/bg_ffffff_r5"
        android:orientation="vertical"
        android:paddingLeft="@dimen/dp_10"
        android:paddingRight="@dimen/dp_10">

        <com.itheima.roundedimageview.RoundedImageView
            android:id="@+id/image"
            android:layout_width="77dp"
            android:layout_height="77dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="12dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/g10_04weijiazai"
            app:riv_corner_radius="5dp"
            app:riv_oval="false" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginRight="65dp"
            android:layout_toRightOf="@id/image"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvSetMealName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="套餐名称套餐名称"
                android:textColor="@color/color_333333"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/setMealDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="8dp"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="广告语广告语广告语广告语 广告语广告语广告语广告语广告语广告语 广告语广告语广告语广告语广告语广告语"
                android:textColor="@color/color_666666"
                android:textSize="12sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/setMealPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="68.00"
                    android:textColor="@color/color_F7AF25"
                    android:textSize="16sp" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="18dp"
                    android:layout_marginLeft="5dp">

                    <LinearLayout
                        android:id="@+id/ll_rebate"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:visibility="gone">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:background="@drawable/shape_rebate_left_vip"
                            android:gravity="end|center_vertical"
                            android:paddingLeft="5dp"
                            android:paddingRight="5dp"
                            android:text="线上购买"
                            android:textColor="@color/color_333333"
                            android:textSize="10sp" />

                        <TextView
                            android:id="@+id/tv_rebate"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:background="@drawable/shape_rebate_right_vip"
                            android:ellipsize="end"
                            android:gravity="center_vertical"
                            android:maxLines="1"
                            android:paddingLeft="5dp"
                            android:paddingRight="5dp"
                            android:text="返10%"
                            android:textColor="@color/color_333333"
                            android:textSize="10sp" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/vip_rebate"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_centerVertical="true"
                        android:background="@drawable/shape_rebate"
                        android:gravity="center"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:text="省¥0.00"
                        android:textColor="@color/color_333333"
                        android:textSize="10sp"
                        android:visibility="gone" />
                </RelativeLayout>
            </LinearLayout>

        </LinearLayout>

        <TextView
            android:layout_width="55dp"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:background="@drawable/shape_fed428_r5"
            android:gravity="center"
            android:text="购买" />

    </RelativeLayout>

</LinearLayout>