<?xml version="1.0" encoding="utf-8"?>
<com.feitianzhu.huangliwo.view.CornerLinearView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/dp_10"
    android:background="@color/white"
    android:orientation="horizontal"
    app:cornerRadius="@dimen/dp_3">

    <ImageView
        android:id="@+id/imageView9"
        android:layout_width="114.5dp"
        android:layout_height="@dimen/dp_76"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_marginBottom="@dimen/dp_15"
        android:src="@color/bank_bg01" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_11"
        android:orientation="vertical">

        <TextView
            android:id="@+id/item_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_20"
            android:lines="2"
            android:textColor="#333333"
            android:textSize="@dimen/sp_17"
            tools:text="会员福利会员福利会员
            福利会员福利" />

        <TextView
            android:id="@+id/content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:lines="1"
            android:text="2020.05.18"
            android:textAppearance="?attr/textAppearanceListItem"
            android:textColor="#999999"
            android:textSize="@dimen/sp_13" />
    </LinearLayout>


</com.feitianzhu.huangliwo.view.CornerLinearView>
