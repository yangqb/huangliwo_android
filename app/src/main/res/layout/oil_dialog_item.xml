<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_centerHorizontal="true"
        android:layout_width="@dimen/dp_320"
        android:layout_height="@dimen/dp_150"
        android:elevation="@dimen/dp_5"
        android:background="@drawable/line_back"
        android:orientation="vertical">
        <TextView
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="@dimen/dp_15"
            android:text="您还不是会员无法享受加油优惠，\n 请尽快开通！"
            android:textSize="20dp" />



        <LinearLayout
            android:gravity="center_horizontal"
            android:id="@+id/ll_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/dp_22"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/dilagimagedimiss"
                android:layout_width="@dimen/dp_78"
                android:layout_height="@dimen/dp_29"
                android:layout_marginLeft="@dimen/dp_1_5"
                android:layout_marginTop="@dimen/dp_7"
                android:layout_marginRight="@dimen/dp_1_5"
                android:layout_marginBottom="@dimen/dp_7"
                android:background="@drawable/shape_item_distance"
                android:gravity="center"
                android:text="取消"
                android:textColor="@drawable/shape_text_color"
                android:textSize="@dimen/sp_13" />

            <TextView
                android:id="@+id/dilagimageupdate"
                android:layout_width="@dimen/dp_78"
                android:layout_height="@dimen/dp_29"
                android:layout_marginLeft="@dimen/dp_30"
                android:layout_marginTop="@dimen/dp_7"
                android:layout_marginRight="@dimen/dp_1_5"
                android:layout_marginBottom="@dimen/dp_7"
                android:background="@drawable/shape_item_distance"
                android:gravity="center"
                android:text="去开通会员"
                android:textColor="@drawable/shape_text_color"
                android:textSize="@dimen/sp_13" />

        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>