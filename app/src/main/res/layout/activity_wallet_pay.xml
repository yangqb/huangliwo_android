<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context="com.feitianzhu.fu700.me.ui.WalletPayActivity"
    >
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="45dp"
      android:layout_marginTop="10dp"
      android:background="@color/white"
      android:gravity="center_vertical"
      android:orientation="horizontal"
      android:padding="10dp"
      >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="金额"
        android:textColor="@color/sf_black"
        android:textSize="@dimen/sf_font_medum"
        />
    <EditText
        android:id="@+id/edt_money"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@null"
        android:ellipsize="end"
        android:inputType="numberDecimal"
        android:hint="请输入充值金额"
        android:paddingLeft="25dp"
        android:singleLine="true"
        android:textColorHint="#BCBCBC"
        android:textSize="@dimen/sf_font_medum"
        />
  </LinearLayout>
  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="48.5dp"
      android:gravity="center_vertical"
      android:paddingTop="10dp"
      android:textColor="@color/default_bg"
      >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="选择支付方式"
        android:textSize="@dimen/sf_font_medum"
        android:layout_marginLeft="@dimen/dp_10"
        android:textColor="@color/sf_black"
        />
  </RelativeLayout>
  <RelativeLayout
      android:layout_width="match_parent"
      android:id="@+id/ly_one"
      android:layout_height="55dp"
      android:background="@color/white"
      >
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        >
      <ImageView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginLeft="@dimen/dp_10"
          android:src="@drawable/icon_weixinzhifu"
          />
      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginLeft="17dp"
          android:text="微信支付"
          android:textColor="@color/txt_big"
          />
    </LinearLayout>
    <ImageView
        android:id="@+id/iv_check1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dp_10"

        android:layout_centerVertical="true"
        android:src="@drawable/shops_pay_select"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:background="@color/default_bg"
        android:layout_alignParentBottom="true"
        />
  </RelativeLayout>
  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="55dp"
      android:id="@+id/ly_two"
      android:background="@color/white"
      >
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        >
      <ImageView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginLeft="@dimen/dp_10"
          android:src="@drawable/icon_zhifubaozhifu"
          />
      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginLeft="17dp"
          android:text="支付宝支付"
          android:textColor="@color/txt_big"
          />
    </LinearLayout>
    <ImageView
        android:id="@+id/iv_check2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_centerVertical="true"
        android:src="@drawable/shops_pay_select"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:background="@color/default_bg"
        android:layout_alignParentBottom="true"
        />
  </RelativeLayout>


    <Button
        android:id="@+id/rl_bottomContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_10"
        android:layout_marginLeft="37.5dp"
        android:layout_marginRight="37.5dp"
        android:layout_marginTop="55dp"
        android:background="@drawable/button_shape_blue"
        android:text="确定"
        android:textColor="@color/white"
        android:textSize="@dimen/dp_16"
        style="?android:attr/borderlessButtonStyle"
        />
</LinearLayout>
