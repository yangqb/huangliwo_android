<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:orientation="vertical">
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="96dp"
      android:gravity="center_vertical"
      android:orientation="horizontal"
      android:paddingLeft="10dp"

      android:paddingTop="10dp"
      >
      <LinearLayout
              android:layout_width="40dp"
              android:orientation="vertical"
              android:layout_height="match_parent">

          <com.feitianzhu.fu700.view.CircleImageView
              android:id="@+id/item_icon"
              android:layout_width="40dp"
              android:layout_height="40dp"
             />
      </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:paddingLeft="10dp"
        android:gravity="center_vertical"
        android:orientation="vertical"
        >
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="0dp"
          android:layout_weight="1"
          android:gravity="center_vertical"
          android:orientation="vertical"
          >
          <LinearLayout
                  android:layout_width="match_parent"
                  android:orientation="horizontal"
                  android:gravity="center_vertical"
                  android:layout_height="wrap_content">

              <TextView
                  android:id="@+id/item_title"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"

                  android:text="张三"
                  android:textColor="@color/sf_black"
                  android:textSize="14sp" />
               <View
                       android:layout_width="0dp"
                       android:layout_height="0dp"
                   android:layout_weight="1"
                       />

              <TextView
                  android:id="@+id/item_time"
                  android:layout_width="wrap_content"
                  android:layout_marginRight="10dp"
                  android:layout_height="wrap_content"
                  android:text="张三"
                  android:textColor="#696B70"
                  android:textSize="12sp" />
          </LinearLayout>

          <me.zhanghai.android.materialratingbar.MaterialRatingBar
              android:id="@+id/item_ratting"
              style="@style/Widget.MaterialRatingBar.RatingBar"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:maxHeight="18dp"
              android:minHeight="18dp"
              android:rating="2.5"
              android:isIndicator="true"
              app:mrb_progressTint="@color/sf_yellow"
              app:mrb_secondaryProgressTint="@color/sf_yellow" />

      </LinearLayout>
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="0dp"
          android:layout_weight="1"
          android:gravity="center_vertical"
          android:orientation="vertical"
          >

          <TextView
              android:id="@+id/item_content"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="非常好"
              android:textColor="@color/sf_black"
              android:textSize="16sp" />
      </LinearLayout>
      <View
          android:layout_width="match_parent"
          android:background="@color/sf_divider"
          android:layout_height="1dp"/>
    </LinearLayout>



  </LinearLayout>
</LinearLayout>