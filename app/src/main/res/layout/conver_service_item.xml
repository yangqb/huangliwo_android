<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.feitianzhu.huangliwo.view.CornerLinearView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_65"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingStart="@dimen/dp_10"
        android:paddingEnd="@dimen/dp_10"
        app:cornerRadius="@dimen/dp_5">
        <LinearLayout
            android:id="@+id/shopissues"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_16"
            android:orientation="horizontal">

            <com.feitianzhu.huangliwo.view.CircleImageView
                android:id="@+id/converserviceimg"
                android:layout_width="@dimen/dp_30"
                android:layout_height="@dimen/dp_30"
                android:src="@mipmap/l04_shangpin"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/dp_19"
                />

            <TextView
                android:id="@+id/converservicename"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="客服1"
                android:textColor="#ff333333"
                android:textSize="@dimen/sp_16"
                android:layout_marginLeft="@dimen/dp_12"
                android:layout_gravity="center_vertical"
                />
        </LinearLayout>
    </com.feitianzhu.huangliwo.view.CornerLinearView>
</LinearLayout>