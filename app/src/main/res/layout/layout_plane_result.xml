<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_f7f7f7"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="6dp"
        android:background="@drawable/bg_ffffff_r5"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:paddingTop="15dp"
        android:paddingRight="10dp"
        android:paddingBottom="15dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/dptTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="10:55"
                        android:textColor="@color/color_000000"
                        android:textSize="21sp" />

                    <TextView
                        android:id="@+id/dptAirport"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text="虹桥T2"
                        android:textColor="@color/color_999999"
                        android:textSize="13sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/flightTimes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2小时15分"
                        android:textColor="@color/color_999999"
                        android:textSize="9sp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@mipmap/k02_11quwang" />

                    <TextView
                        android:id="@+id/stopCity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="转北京"
                        android:textColor="@color/color_999999"
                        android:textSize="9sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/arrTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:text="10:55"
                        android:textColor="@color/color_000000"
                        android:textSize="21sp" />

                    <TextView
                        android:id="@+id/arrAirport"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:layout_marginTop="10dp"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text="虹桥T2"
                        android:textColor="@color/color_999999"
                        android:textSize="13sp" />

                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/crossDays"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="+1天"
                android:textColor="@color/color_289cef"
                android:textSize="12sp"
                android:visibility="gone" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/barePrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="495"
                    android:textColor="@color/color_ff8300"
                    android:textSize="21sp" />

                <TextView
                    android:id="@+id/discount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="经济舱3.5折"
                    android:textColor="@color/color_999999"
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/cprice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="儿童￥200 婴儿￥200"
                    android:textColor="@color/color_999999"
                    android:textSize="10sp"
                    android:visibility="gone" />

            </LinearLayout>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp">

            <TextView
                android:id="@+id/flightNum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="吉祥航HO1252 空客321(中)"
                android:textColor="@color/color_999999"
                android:textSize="11sp" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true">

                <LinearLayout
                    android:id="@+id/ll_rebate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:visibility="gone"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:background="@drawable/shape_detail_left_vip"
                        android:gravity="end|center_vertical"
                        android:paddingLeft="15dp"
                        android:paddingRight="5dp"
                        android:text="成为会员"
                        android:textColor="@color/color_333333"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tv_rebate"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:background="@drawable/shape_detail_right_vip"
                        android:ellipsize="end"
                        android:gravity="center_vertical"
                        android:maxLines="1"
                        android:paddingLeft="5dp"
                        android:paddingRight="15dp"
                        android:text="省¥0.00"
                        android:textColor="@color/color_333333"
                        android:textSize="12sp" />

                </LinearLayout>

                <TextView
                    android:id="@+id/vip_rebate"
                    android:layout_width="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_height="18dp"
                    android:background="@drawable/shape_detail_rebate"
                    android:gravity="center"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:text="省¥0.00"
                    android:textColor="@color/color_333333"
                    android:textSize="12sp"
                    android:visibility="gone" />
            </RelativeLayout>
        </RelativeLayout>

    </LinearLayout>

</LinearLayout>