<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <RelativeLayout
            android:layout_width="80dp"
            android:layout_height="60dp">
            <ImageView
                android:id="@+id/iv_icon"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/a1"
                android:layout_margin="@dimen/dp_10"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/tv_1ji"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:text="一级VAP"
                android:textColor="@color/txt_big"
                android:textSize="14dp"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_1ji"
                android:layout_marginTop="@dimen/dp_7"
                android:orientation="horizontal"
                >
                <TextView
                    android:id="@+id/tv_content"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:text="申购100PV"
                    android:textColor="@color/consumer_alliance"
                    android:textSize="12dp"
                    />
                <TextView
                    android:id="@+id/tv_content_percent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:text="10%"
                    android:textSize="12dp"
                    android:textColor="@color/consumer_alliance"
                    />

            </LinearLayout>
            <ImageView
                android:id="@+id/iv_selectButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/icon_weixuanze"
                android:layout_marginRight="@dimen/dp_10"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/default_bg"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_alignParentBottom="true"
                />

        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
