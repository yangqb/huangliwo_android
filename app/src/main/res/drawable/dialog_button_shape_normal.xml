<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
       android:shape="rectangle">
    <!-- rectangle表示为矩形 -->

    <!-- 填充的颜色 -->
    <solid android:color="@color/white" />

     <!--边框的颜色和粗细 -->
    <stroke
        android:width="0.5dp"
        android:color="@color/txt_big"
    />

    <!-- 矩形的圆角弧度 -->
    <corners android:radius="20dp" />
    <padding
        android:left="45dp"
        android:top="10dp"
        android:right="45dp"
        android:bottom="10dp"
        />


</shape>